    <ToggleButton
        android:id="@+id/toggleButtonEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Enabled"
        android:textOff="Disabled" />
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
